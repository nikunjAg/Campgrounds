<%- include ../partials/header %>

<div class="container">
    <div class="show-header">
        <h3 class="text-center">Campgrounds</h3>
        <a class="btn btn-primary float-right" href="/campgrounds/new" >Add New Campground</a>
    </div>
    <% campgrounds.forEach(campground => { %>
        <div class="card mb-3" style="max-width: 100%;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="<%= campground.image %>" style="max-height: 300px;"  class="card-img" alt="Campground Image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <a href="/campgrounds/<%= campground._id %>" class="card-link "><%= campground.name %></a>
                        <p class="card-text"><%= campground.caption.substring(0, 200) %>...</p>
                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>
</div>

<%- include ../partials/footer %>